# Env for Filesystem connector. Pin the image and set asset/filter/action. Copy to .env.filesystem.<env> and point compose via --env-file.

# Filesystem connector env (sample)
FILESYSTEM_IMAGE=dsxconnect/filesystem-connector:0.5.36
DSXCONNECTOR_ASSET=/path/to/folder
DSXCONNECTOR_FILTER=
DSXCONNECTOR_ITEM_ACTION=nothing
#DSXCONNECT_ENROLLMENT_TOKEN=abc123
SCAN_FOLDER_PATH=/path/to/local/folder
QUARANTINE_FOLDER_PATH=/path/to/local/folder/dsxconnect-quarantine
# optional overrides
FILESYSTEM_IMAGE=dsxconnect/filesystem-connector:latest
DSXCONNECTOR_ITEM_ACTION=nothing
DSXCONNECTOR_ITEM_ACTION_MOVE_METAINFO=/app/quarantine
